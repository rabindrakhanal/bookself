<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.ecu.cs.bookshelf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bookshelf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".UserDashboardActivity"></activity>
        <activity android:name=".BookActivity"
                  android:parentActivityName=".BookListActivity">
        </activity>
        <activity android:name=".BookListActivity"
                  android:parentActivityName=".UserDashboardActivity">
        </activity>
        <activity android:name=".UpdatePasswordActivity" />
    </application>

</manifest>