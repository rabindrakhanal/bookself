<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="24dp"
            android:paddingBottom="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="107dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:id="@+id/textView2" />

        <Button
            android:id="@+id/activity_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Activity 1"
            android:textSize="20sp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/activity_button2" />

         <Button
             android:id="@+id/activity_button2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Start Activity 2"
             android:textSize="20sp"
             android:layout_marginTop="23dp"
             android:layout_below="@+id/activity_button1"
             android:layout_centerHorizontal="true" />


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
